                <div id="settingsModal_client_vocalChatSettingsArea" class="settingsModal_settingsArea_elementsList">
                    <h3>Quand je rejoins un groupe</h3>

                    <div class="form_checkbox_group settingsModal_settingsArea_element" id="settingsModal_client_vocalChatSettings_autoJoinLeagueVoiceContainer">
                        <input type="checkbox" id="settingsModal_client_vocalChatSettings_autoJoinLeagueVoice" name="settingsModal_client_vocalChatSettings_autoJoinLeagueVoice" />
